# SketchAI UGC Safety Webhook Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# Authentication
WEBHOOK_API_KEY=your_secure_webhook_api_key_here

# Email Configuration (required for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Recipients
MODERATION_EMAIL=moderation@yourcompany.com
ADMIN_EMAIL=admin@yourcompany.com

# Database Configuration (SQLite by default)
DATABASE_PATH=./sketchai_reports.db

# Security Configuration
RATE_LIMIT_PER_DEVICE_PER_HOUR=10

# Optional: Advanced Configuration
# REDIS_URL=redis://localhost:6379  # For production rate limiting
# DATABASE_URL=postgresql://...     # For PostgreSQL instead of SQLite
