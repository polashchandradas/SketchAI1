// Release Configuration for SketchAI

// Build Settings
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_COMPILATION_MODE = wholemodule
ENABLE_TESTABILITY = NO
GCC_OPTIMIZATION_LEVEL = s
ONLY_ACTIVE_ARCH = NO

// Code Signing
CODE_SIGN_STYLE = Manual
CODE_SIGN_IDENTITY = iPhone Distribution
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM)
PROVISIONING_PROFILE_SPECIFIER = $(PROVISIONING_PROFILE_SPECIFIER)

// Bundle Settings
PRODUCT_BUNDLE_IDENTIFIER = com.yourname.sketchai
PRODUCT_NAME = SketchAI

// Release Flags
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
GCC_PREPROCESSOR_DEFINITIONS = $(inherited)
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited)

// Performance
COMPILER_INDEX_STORE_ENABLE = NO
ENABLE_BITCODE = NO
DEAD_CODE_STRIPPING = YES
STRIP_INSTALLED_PRODUCT = YES

// Privacy
ITSAppUsesNonExemptEncryption = NO

// App Store
VALIDATE_PRODUCT = YES
SKIP_INSTALL = NO

// Asset Catalog Compilation Fix for Xcode 16
ASSETCATALOG_COMPILER_INCLUDE_ALL_APPICON_ASSETS = NO
ASSETCATALOG_COMPILER_OPTIMIZATION = space
ASSETCATALOG_COMPILER_GENERATE_SWIFT_ASSET_SYMBOL_EXTENSIONS = NO
ASSETCATALOG_COMPILER_GENERATE_SWIFT_ASSET_SYMBOLS = NO
ASSETCATALOG_COMPILER_SKIP_VALIDATION = NO

// SDK and Runtime Version Fixes - Force device-only to avoid simulator runtime conflicts
SUPPORTED_PLATFORMS = iphoneos
VALID_ARCHS = arm64 arm64e
ARCHS = arm64
TARGETED_DEVICE_FAMILY = 1,2
